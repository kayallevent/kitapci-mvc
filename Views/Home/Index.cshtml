@model List<Basics.Models.Kitap>
@{
    ViewData["Title"] = "Kitap Galerisi";
}

<html>
<head>
    <title>Kitap Galerisi</title>
    <style>
        body {
            background-color: #f2f2f2;
            padding: 30px;
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: #333;
            color: white;
            padding: 10px 30px;
            font-family: Arial;
        }
        .kitaplar {
            display: flex;
            flex-wrap: wrap;
            gap: 120px;
            margin-top: 30px;           
        }
        .kitap-kutu {
            border: 1px solid #ccc;
            padding: 15px;
            width: 220px;
            background-color: #fff;
            text-align: center;
            transition: 0.3s ease;
            transform: scale(1.05);
        }
        .kitap-kutu img {
            width: 100%;
            height: auto;
            border: 2px solid black;
            margin-bottom: 10px;
        }
        .btn {
            display: inline-block;
            background-color: #4CAF50;
            color: white;
            padding: 8px 12px;
            text-decoration: none;
            border-radius: 4px;
        }
        .btn:hover {
            transform: scale(1.05);
            background-color: #45a049;
        }
    </style>
</head>
<body>
<div style="display: flex; justify-content: flex-end; gap: 10px; background-color: #0d1be4; padding: 10px;">
    <a href="/Home/Giris" class="btn">Giriş Yap</a>
    <a href="/Home/Kayit" class="btn">Kayıt Ol</a>
</div>

    <div class="navbar">
        <h2>📚 Kitabeviniz</h2>
    </div>

    <h3>Popüler Kitaplar</h3>
    <div class="kitaplar">
        @foreach (var kitap in Model)
        {
            <div class="kitap-kutu">
                <img src="~/img/@kitap.ResimUrl" alt="@kitap.Ad" />
                <h4>@kitap.Ad</h4>
                <p>@kitap.Fiyat ₺</p>
                <a class="btn" href="/Cart/AddToCart/@kitap.Id">Sepete Ekle</a>
            </div>
        }
    </div>

</body>
</html>
